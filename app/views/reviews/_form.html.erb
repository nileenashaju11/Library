<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :review %>
    <%= form.text_area :review %>
  </div>
  <div class="field">
    <%= form.label :book %>
    <%= collection_select(:review, :book_id, Book.all, :id,:title,prompt: true) %>
  </div>
  <div class="field">
    <%= form.label :author %>
    <%= collection_select(:review, :author_id, Author.all, :id,:name,prompt: true) %>
  </div>
   

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
